{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "src/**",
      "package.json",
      "bun.lock",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "startCommand": "bun run src/index.ts",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
