# Twitter API (twitterapi.io)
TWITTER_API_KEY=your_api_key
TWITTER_BOT_USERNAME=findthisthread

# Twitter Login (for posting - run: bun run scripts/twitter-login.ts)
TWITTER_PROXY=http://user:pass@ip:port
TWITTER_LOGIN_COOKIE=
# Optional: pre-fill login credentials
# TWITTER_USERNAME=
# TWITTER_EMAIL=
# TWITTER_PASSWORD=
# TWITTER_2FA_SECRET=

# Google Gemini API
GEMINI_API_KEY=your_gemini_key

# Reddit OAuth (optional - for higher rate limits: 60 req/min vs 10)
# Create app at https://www.reddit.com/prefs/apps (type: script)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Database
DATABASE_PATH=./data/mentions.db

# Bot Config
POLL_INTERVAL_MS=30000
MAX_IMAGE_SIZE_MB=10
